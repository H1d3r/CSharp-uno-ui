<?xml version="1.0" encoding="utf-8" ?>
<Project>
	<Import Project="..\Directory.Build.targets"/>
	<ItemGroup>
		<PackageReference Include="Microsoft.CodeAnalysis.BannedApiAnalyzers" Version="3.3.4" PrivateAssets="all" />
		<AdditionalFiles Include="$(MSBuildThisFileDirectory)\BannedSymbols.txt" />
	</ItemGroup>

	<ItemGroup Condition="'$(UNO_UWP_BUILD)'!='true'">
		<!-- These files are present for the UWP Build only, to preserve compatibility -->
		<Compile Remove="UI\Xaml\Controls\Legacy\Unsupported\*.cs"/>

		<Compile Remove="UI\Xaml\Controls\Legacy\ProgressBar\*.cs"/>
		<None Include="UI\Xaml\Controls\Legacy\ProgressBar\*.cs"/>

		<Compile Remove="UI\Xaml\Controls\Legacy\Icons\BitmapIconSource.cs" />
		<Compile Remove="UI\Xaml\Controls\Legacy\Icons\SymbolIconSource.cs" />
		<Compile Remove="UI\Xaml\Controls\Legacy\Icons\PathIconSource.cs" />
		<Compile Remove="UI\Xaml\Controls\Legacy\Icons\FontIconSource.cs" />
		<Compile Remove="UI\Xaml\Controls\Legacy\Icons\IconSource.cs" />

		<Compile Remove="UI\Xaml\Controls\Legacy\NavigationView\**\*.cs" />
		<Page Remove="UI\Xaml\Controls\Legacy\NavigationView\**\*.xaml" />
		<XamlMergeInput Remove="UI\Xaml\Controls\Legacy\NavigationView\**\*.xaml" />
	</ItemGroup>

	<ItemGroup Condition="'$(UNO_UWP_BUILD)'=='true'">
		<!-- These files are present for the WinUI Build only -->
		<Compile Remove="Microsoft\UI\Xaml\Controls\ItemsView\**\*.cs"/>
		<Page Remove="Microsoft\UI\Xaml\Controls\ItemsView\**\*.xaml"/>
		<XamlMergeInput Remove="Microsoft\UI\Xaml\Controls\ItemsView\**\*.xaml"/>
		<None Include="Microsoft\UI\Xaml\Controls\ItemsView\**\*.cs"/>
		<None Include="Microsoft\UI\Xaml\Controls\ItemsView\**\*.xaml"/>

		<Compile Remove="Microsoft\UI\Xaml\Controls\ItemContainer\**\*.cs"/>
		<Page Remove="Microsoft\UI\Xaml\Controls\ItemContainer\ItemContainer.xaml"/>
		<XamlMergeInput Remove="Microsoft\UI\Xaml\Controls\ItemContainer\ItemContainer.xaml"/>
		<None Include="Microsoft\UI\Xaml\Controls\ItemContainer\**\*.cs"/>
		<None Include="Microsoft\UI\Xaml\Controls\ItemContainer\ItemContainer.xaml"/>

		<Compile Remove="Microsoft\UI\Xaml\Controls\SelectorBar\**\*.cs"/>
		<Page Remove="Microsoft\UI\Xaml\Controls\SelectorBar\**\*.xaml"/>
		<XamlMergeInput Remove="Microsoft\UI\Xaml\Controls\SelectorBar\**\*.xaml"/>
		<None Include="Microsoft\UI\Xaml\Controls\SelectorBar\**\*.cs"/>
		<None Include="Microsoft\UI\Xaml\Controls\SelectorBar\**\*.xaml"/>

	</ItemGroup>

</Project>
