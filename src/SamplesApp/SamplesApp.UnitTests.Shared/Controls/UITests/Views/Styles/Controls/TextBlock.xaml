<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Application/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--
        ******************************************************************
        DEFAULT TEXTBLOCK STYLES
        ******************************************************************
    -->

    <Style x:Key="DefaultTypo" TargetType="TextBlock">
        <Setter Property="LineStackingStrategy" Value="BlockLineHeight" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="FontWeight" Value="Normal" />
    </Style>

    <!--
        ******************************************************************
        STYLE GUIDE TEXTBLOCK STYLES
        ******************************************************************
    -->

    <Style
        x:Key="Typo01"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontWeight" Value="Bold" />
        <Setter Property="FontSize" Value="26" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>

    <Style
        x:Key="Typo02"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorSecondaryBrush}" />
    </Style>

    <Style
        x:Key="Typo03"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="17" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>

    <Style
        x:Key="Typo04"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{ThemeResource AccentFillColorDefaultBrush}" />
    </Style>

    <Style
        x:Key="Typo05"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorPrimaryBrush}" />
    </Style>

    <Style
        x:Key="Typo06"
        BasedOn="{StaticResource DefaultTypo}"
        TargetType="TextBlock">
        <Setter Property="FontSize" Value="10" />
    </Style>

</ResourceDictionary>
